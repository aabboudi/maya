{
    "name": "tailwind-config",
    "version": "0.1.0",
    "description": "Tailwind is ready for build or watch",
    "scripts": {
        "watch:twcss": "npx tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch",
        "watch:css": "postcss ./static/css/input.css -o ./static/css/output.css --watch",
        "build:css": "postcss ./static/css/input.css -o ./static/css/output.css --minify"
    },
    "dependencies": {
        "lucide": "^0.424.0",
        "preline": "^2.4.1"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "postcss": "^8.4.41",
        "postcss-cli": "^11.0.0",
        "tailwindcss": "^3.4.10"
    }
}
